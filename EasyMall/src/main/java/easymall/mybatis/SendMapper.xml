<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="easymall.dao.TextDao">
	<select id="showtexture" parameterType="Integer" resultType="easymall.po.Text">
		select texttime,text,user_id,getter_id from text where
			user_id=#{user_id} or (getter_id=#{user_id} and user_id=1)
			order by texttime
	</select>
	<insert id="sendtext" parameterType="easymall.po.Text">
		insert into text values(#{user_id},#{getter_id},#{texttime},#{text})
	</insert>
</mapper>